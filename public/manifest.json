{
  "manifest_version": 3,
  "name": "quickee",
  "version": "0.1.0",
  "description": "Tabs on your fingers",
  "background": {
    "service_worker": "src/pages/background/index.js",
    "type": "module"
  },
  "action": {
    "default_icon": "quickee-32.png"
  },
  "icons": {
    "16": "quickee-16.png",
    "32": "quickee-32.png",
    "48": "quickee-48.png",
    "128": "quickee-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "quickee-16.png",
        "quickee-32.png",
        "quickee-48.png",
        "quickee-128.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}